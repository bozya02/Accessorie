<Application x:Class="Accessorie.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Accessorie"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Grid">
            <Setter Property="ItemsControl.FontFamily" Value="Roboto"/>
            <Setter Property="ItemsControl.Foreground" Value="DarkMagenta"/>
            <Setter Property="ItemsControl.Background" Value="Moccasin"/>
            <Setter Property="ItemsControl.FontSize" Value="24"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="ItemsControl.Background" Value="DarkMagenta"/>
            <Setter Property="ItemsControl.Foreground" Value="Moccasin"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Application.Resources>
</Application>